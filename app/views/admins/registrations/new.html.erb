<%= stylesheet_link_tag    'application-index' %>
<div style="margin: 30px 0 100px 0; width: 100%; height: auto;">
  <div class="middle-box text-center loginscreen   animated fadeInDown" style="background-color: white; padding: 15px;">
    <div>
      <div>
      <%= image_tag 'logo.jpg', style: "width: 90%; margin: 0 auto; height: 50px; border-radius: 3px;" %>
      </div>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'm-t'}) do |f| %>
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <a href="#" data-dismiss="alert" class="close">×</a>
            <ul>
              <li>
                <%= value %>
              </li>
            </ul>
          </div>
        <% end %>

          <div class="form-group">            
              <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Fullname" %>
          </div>
          <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">          
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />          
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm your password" %>
          </div>
          <%= f.submit "Sign up", class: "btn btn-primary block full-width m-b" %>
          
          <p class="text-muted text-center"><small>Already have an account?</small></p>
          <%= link_to "Login", new_admin_session_path, class: "btn btn-default block full-width m-b" %>
          <br>
          <%= link_to "Home", root_path, class: "btn btn-default block full-width m-b" %>
      <% end %>
      <p class="m-t"> <small>Emirates National Group IT, Copyright © 2017</small> </p>
    </div>
  </div>
</div>


