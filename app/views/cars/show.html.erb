<%= stylesheet_link_tag 'application' %>
<div class="cover-screen">	
	<header id="home" class="header" style="margin-bottom: 30px;">
		<div id="main-nav" class="navbar-sale navbar-inverse bs-docs-nav fixed" role="banner">
			<div class="container">
				<div class="navbar-header responsive-logo">
					<button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</button>
					<div class="navbar-brand" style="padding: 15px;">	
					<%= link_to root_path do %>				
						<%= image_tag 'logo.jpg', alt: "eTaxi", style: "width: 200px; height: 41px;" %>
					<% end %>
					</div>
				</div>
				<nav class="navbar-collapse collapse" role="navigation" id="bs-navbar-collapse">
					<ul class="nav navbar-nav navbar-right responsive-nav main-nav-list" style="font-family: Lato;">
						<li class="current">
							<% if user_signed_in? %>
								<a data-toggle="dropdown" class="dropdown-toggle" href="#">
	                            <span class="clear"> 
	                            	<span class="text-muted text-xs block">
	                            	My Account
	                            	<b class="caret">
	                            	</b>
	                            	</span> 
	                            </span> 
	                            </a>
	                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
			                        <li><%= link_to 'Logout', destroy_user_session_path %></li>
			                    </ul>
							<% else %>
								<%= link_to 'Sign In', new_user_session_path, style: "color: #20AA73; font-weight: bold;" %>
							<% end %>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</header>
	<section class="container features gray-bg" style="height: 100%">
		<div class="row wrapper border-bottom white-bg page-heading">
			<div class="col-lg-12" style="padding: 20px 0 0 20px;">
				<%= link_to 'Show All Cars', cars_path, class: "btn btn-primary btn-sm pull-right" %>
		        <h2 style="margin: 0;">Car Details</h2>
		        
		    </div>

		</div>
		<div class="wrapper wrapper-content animated fadeInRight" style="margin: 0 -15px 0 -15px;">
			<div class="row">
				<div class="col-lg-12" style="padding: 5px;">
					<div class="ibox product-detail">
                        <div class="ibox-content">

                            <div class="row">
                                <div class="col-md-7" style="padding-right: 30px;">
                                    <div class="car-images">
                                    	<% if @car.car_images.exists? %>
	                                    	<% @car.car_images.each do |image| %>
		                                        <div class="image-imitation car-primary-image" style="background: url('<%= image.image.url(:web) %>');">
		                                        </div>
	                                        <% end %>
	                                    <% else %>
	                                    	<div class="image-imitation car-primary-image" style="background: url('<%= @car.primary_image.url(:web) %>');">
		                                    </div>
	                                    <% end %>
		                            </div>
                                </div>
                                <div class="col-md-5" style="padding-left: 30px;">

                                    <h2 class="font-bold m-b-xs">
                                        <%= @car.car_brand.name %> <%= @car.car_model.name %>
                                        <span class="pull-right text-warning" style="font-size: 18px;"><%= @car.reference_code %></span>
                                    </h2>
                                    <small>Posted: <%= @car.created_at.strftime("%d-%M-%Y") %></small>
                                    <div class="m-t-md">
                                        <h2 class="product-main-price">
                                        	AED <%= number_with_precision(@car.price, :precision => 0, :delimiter => ',') %>
                                        	<small class="text-muted">All in</small> 
                                        </h2>
                                    </div>
                                    <hr>

                                    <h4>Additional Details</h4>
                                    <div class="row m-t-lg">
	                                    <div class="col-md-4">
	                                    		<div class="col-md-12 col-centered" style="margin-bottom: 10px; text-align: center;">
	                                    			<i class="fa fa-tachometer fa-2x"></i> 	
	                                    		</div>
	                                        <div class="col-md-12" style="text-align: center;">
	                                        	<h4>
		                                        	<strong>
		                                        		<%= number_with_precision(@car.mileage, :precision => 0, :delimiter => ',') %>
		                                        	</strong> 
		                                        		km
		                                        </h4>
	                                        </div>	                                        
	                                    </div>

	                                    <div class="col-md-4">
	                                    		<div class="col-md-12 col-centered" style="margin-bottom: 10px; text-align: center;">
	                                    			<i class="fa fa-taxi fa-2x"></i> 	
	                                    		</div>
	                                        <div class="col-md-12" style="text-align: center;">
	                                        	<h4>
		                                        	<strong>
		                                        		<%= @car.car_color.name %>
		                                        	</strong> 
		                                        		Color
		                                        </h4>
	                                        </div>	                                        
	                                    </div>

	                                    <div class="col-md-4">
	                                    		<div class="col-md-12 col-centered" style="margin-bottom: 10px; text-align: center;">
	                                    			<i class="fa fa-calendar fa-2x"></i> 	
	                                    		</div>
	                                        <div class="col-md-12" style="text-align: center;">
	                                        	<h4>
		                                        	<strong>
		                                        		<%= @car.year %>
		                                        	</strong> 
		                                        		Year
		                                        </h4>
	                                        </div>	                                        
	                                    </div>
	                                	</div>

	                                	<div class="row m-t-lg">
	                                		<div class="col-md-4">
	                                    		<div class="col-md-12 col-centered" style="margin-bottom: 10px; text-align: center;">
	                                    			<i class="fa fa-cog fa-2x"></i> 	
	                                    		</div>
	                                        <div class="col-md-12" style="text-align: center;">
	                                        	<h4>
		                                        	<strong>
		                                        		<%= @car.fuel_type.name %>
		                                        	</strong> 
		                                        		Fuel
		                                        </h4>
	                                        </div>	                                        
	                                    </div>

	                                    <div class="col-md-4">
	                                    		<div class="col-md-12 col-centered" style="margin-bottom: 10px; text-align: center;">
	                                    			<i class="fa fa-cogs fa-2x"></i> 	
	                                    		</div>
	                                        <div class="col-md-12" style="text-align: center;">
	                                        	<h4>
		                                        	<strong>
		                                        		<%= @car.engine %>
		                                        	</strong> 
		                                        		Engine
		                                        </h4>
	                                        </div>	                                        
	                                    </div>

	                                    <div class="col-md-4">
	                                    		<div class="col-md-12 col-centered" style="margin-bottom: 10px; text-align: center;">
	                                    			<i class="fa fa-bolt fa-2x"></i> 	
	                                    		</div>
	                                        <div class="col-md-12" style="text-align: center;">
	                                        	<h4>
		                                        	<strong>
		                                        		<%= @car.power %>
		                                        	</strong> 
		                                        		Power
		                                        </h4>
	                                        </div>	                                        
	                                    </div>

	                                	</div>
                                
                                    <hr>

                                    <div>
                                        <div class="btn-group">
                                            <button class="btn btn-primary btn-sm">
                                            	<i class="fa fa-cart-plus"></i> 
                                            	Request for a Quotation
                                            </button>
                                            <button class="btn btn-white btn-sm">
                                            	<i class="fa fa-facebook"></i> 
                                            	Share to Facebook
                                            </button>                                            
                                        </div>
                                    </div>



                                </div>
                            </div>

                        </div>
                        <div class="ibox-footer">
                            <span class="pull-right">
                            	<i class="fa fa-trademark"></i>
                            </span>
                            Terms and Conditions Apply                            
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</section>

</div>
	<script>
		 $(document).ready(function(){


        $('.car-images').slick({
            dots: true
        });
    });


</script>