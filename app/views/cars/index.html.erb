<%= stylesheet_link_tag 'application' %>
<div class="cover-screen">
	<header id="home" class="header">
		<div id="main-nav" class="navbar-sale navbar-inverse bs-docs-nav fixed" role="banner">
			<div class="container">
				<div class="navbar-header responsive-logo">
					<button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</button>
					<div class="navbar-brand" style="padding: 15px;">	
					<%= link_to root_path do %>				
						<%= image_tag 'logo.jpg', alt: "eTaxi", style: "width: 220px; height: 41px;" %>
					<% end %>
					</div>
				</div>
				<nav class="navbar-collapse collapse" role="navigation" id="bs-navbar-collapse">
					<ul class="nav navbar-nav navbar-right responsive-nav main-nav-list" style="font-family: Lato;">
						<li class="current">
							<% if user_signed_in? %>
								<a data-toggle="dropdown" class="dropdown-toggle" href="#">
	                            <span class="clear"> 
	                            	<span class="text-muted text-xs block">
	                            	My Account
	                            	<b class="caret">
	                            	</b>
	                            	</span> 
	                            </span> 
	                            </a>
	                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
			                        <li><a href="profile.html">Profile</a></li>
			                        <li><a href="contacts.html">Contacts</a></li>
			                        <li><a href="mailbox.html">Mailbox</a></li>
			                        <li class="divider"></li>
			                        <li><%= link_to 'Logout', destroy_user_session_path %></li>
			                    </ul>
							<% else %>
								<%= link_to 'Sign In', new_user_session_path, style: "color: #20AA73; font-weight: bold;" %>
							<% end %>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</header>
	<section class="container features gray-bg" style="height: 100%">
		<div class="row wrapper border-bottom white-bg page-heading">
			<div class="col-lg-9">
		        <h2>Cars for Sale</h2>
		    </div>
		</div>
		<div class="wrapper wrapper-content animated fadeInRight">
			<div class="row">
			<% @cars.each do |car| %>
				
					<div class="col-md-4">
						<div class="ibox">
	                        <div class="ibox-content product-box">
	                            <div class="product-imitation car-primary-image" style="background: url('<%= car.primary_image.url(:web, :full) %>'); height: 270px;">
	                            </div>
	                            <div class="product-desc" style="padding: 20px 0 0 0;">
	                                <span class="product-price">
	                                    AED <%= number_with_precision(car.price, :precision => 0, :delimiter => ',') %>
	                                </span>
	                                <a href="#" class="product-name" style="padding: 0 20px 15px 20px;">
	                                	<%= car.car_brand.name %> <%= car.car_model.name %>
	                                </a>
	                                <div class="panel-footer contact-footer">
						                <div class="row">
						                    <div class="col-md-4 border-right"> 
							                    <div class="contact-stat">
							                    	<span>Model Year: </span> 
							                    	<strong><%= car.year %></strong>
							                    </div> 
						                    </div>
						                    <div class="col-md-4 border-right"> 
						                    	<div class="contact-stat">
						                    		<span>Mileage: </span> 
							                    	<strong><%= number_with_precision(car.mileage, :precision => 0, :delimiter => ',') %></strong>
						                    	</div> 
						                    </div>
						                    <div class="col-md-4"> 
						                    	<div class="contact-stat">
						                    		<span>Fuel: </span> 
						                    		<strong><%= car.fuel_type.name %></strong>
						                    	</div> 
						                    </div>
						                </div>
						            </div>
	                            </div>
	                        </div>
	                    </div>
					</div>
				
			<% end %>
			</div>
		</div>
	</section>
</div>